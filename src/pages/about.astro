---
import Layout from "../layouts/Layout.astro";
import {
  Target,
  Users,
  Globe,
  Award,
  Sparkles,
  ArrowRight,
  Shield,
  Rocket,
  Lightbulb,
} from "lucide-react";
import { motion } from "framer-motion";

const team = [
  {
    name: "মেহেদী হাসান",
    role: "বিজনেস স্ট্র্যাটেজিস্ট",
    image: "../../public/mehedi-hasan.jpg",
  },
  {
    name: "আরিফুল শিকদার",
    role: "লারাভেল ডেভেলপার",
    image: "../../public/ariful-shikdar.jpeg",
  },
  {
    name: "অভিজিৎ দত্ত",
    role: "ওয়ার্ডপ্রেস ডেভেলপার",
    image: "../../public/avijit-datta.jpeg",
  },
  {
    name: "কারিমা খাতুন",
    role: "ই-কমার্স স্পেশালিষ্ট",
    image: "../../public/karima.png",
  },
  {
    name: "নাজমুল ইসলাম",
    role: "সিআরএম স্পেশালিষ্ট",
    image: "../../public/najmul.png",
  },
  {
    name: "আতিকুর রহমান",
    role: "হেড অফ মার্কেটিং",
    image: "../../public/atikur-rahman.jpeg",
  },
  {
    name: "সজীব আহমেদ",
    role: "গ্রাফিক্স ডিজাইনার",
    image: "../../public/sojib.jpg",
  },
  {
    name: "সজীব আহমেদ",
    role: "কন্টেন্ট লিড",
    image: "https://i.pravatar.cc/300?u=rakib",
  },
];

const values = [
  {
    icon: Target,
    title: "মিশন",
    desc: "বাংলাদেশের প্রতিটি ক্ষুদ্র উদ্যোগকে ডিজিটাল শক্তিতে বলীয়ান করা।",
  },
  {
    icon: Globe,
    title: "ভিশন",
    desc: "একটি গ্লোবাল ডিজিটাল ইকোসিস্টেম তৈরি করা যা স্থানীয়দের জন্য সাশ্রয়ী।",
  },
  {
    icon: Award,
    title: "গুণমান",
    desc: "আমরা কেবল কোডিং করি না, আমরা ব্র্যান্ডের ভবিষ্যৎ গড়ি।",
  },
];

const stats = [
  { label: "সফল প্রজেক্ট", value: "৫০০+" },
  { label: "সন্তুষ্ট ক্লায়েন্ট", value: "৩৫০+" },
  { label: "অভিজ্ঞ টিম", value: "১৫+" },
];
---

<Layout title="আমাদের কথা | উদ্যোক্তা স্টুডিও">
  <div>
    {/* Hero Section */}
    <section class="relative py-32 overflow-hidden bg-white">
      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center max-w-4xl mx-auto">
          <div
            class="inline-flex items-center gap-2 px-5 py-2 rounded-full border border-red-100 bg-red-50 text-red-600 text-xs font-bold uppercase tracking-widest mb-10"
          >
            <Sparkles size={14} />
            <span>আমাদের পরিচয়</span>
          </div>
          <h1
            class="text-5xl md:text-8xl font-display font-bold text-slate-900 mb-12 leading-[1.1] tracking-tight"
          >
            আমরা ডিজিটাল <br />
            <span class="text-red-600">কারুকার্যের</span> অগ্রদূত।
          </h1>
          <p
            class="text-xl md:text-2xl text-slate-500 font-medium leading-relaxed max-w-3xl mx-auto"
          >
            উদ্যোক্তা স্টুডিও একটি মাল্টি-ডিসিপ্লিনারি ডিজিটাল এজেন্সি যা
            ডিজাইন, প্রযুক্তি এবং মার্কেটিংয়ের সমন্বয়ে ব্যবসার প্রকৃত সম্ভাবনা
            উন্মোচন করে।
          </p>
        </div>
      </div>
      <div
        class="absolute top-0 right-0 w-1/3 h-full bg-red-500/5 -skew-x-12 translate-x-20 -z-10"
      >
      </div>
      <div
        class="absolute bottom-0 left-0 w-1/4 h-1/2 bg-blue-500/5 blur-[120px] -z-10"
      >
      </div>
    </section>
    <section id="about" class="py-32 bg-slate-50 relative">
      <div class="max-w-7xl mx-auto px-6">
        <div class="flex flex-col lg:flex-row gap-20 items-center">
          <div class="lg:w-5/12" style="opacity: 1; transform: none;">
            <div class="relative group">
              <div
                class="aspect-[4/5] rounded-[3rem] overflow-hidden shadow-2xl"
              >
                <img
                  src="https://images.unsplash.com/photo-1552664730-d307ca884978?auto=format&fit=crop&q=80&w=1200"
                  alt="Creative Team"
                  class="w-full h-full object-cover"
                />
              </div><div
                class="absolute -bottom-10 -left-10 bg-red-600 p-10 rounded-[2.5rem] shadow-xl border border-red-600 hidden md:block"
                style="opacity: 1; transform: none;"
              >
                <p class="text-4xl font-display font-bold text-white">২০২০</p><p
                  class="text-xs font-bold text-white uppercase tracking-widest mt-1"
                >
                  যাত্রার শুরু
                </p>
              </div>
            </div>
          </div><div class="lg:w-7/12">
            <div style="opacity: 1; transform: none;">
              <div class="inline-flex items-center gap-2 mb-8 text-red-600">
                <span class="font-bold uppercase tracking-widest text-xs">
                  আমাদের গল্প
                </span>
              </div>
              <h2
                class="text-5xl md:text-7xl font-display font-bold text-slate-900 mb-10 !leading-tight"
              >
                ক্ষুদ্র শুরু থেকে
                <span class="text-red-600">ডিজিটাল বিপ্লব।</span>
              </h2>
              <div class="space-y-8 text-lg text-slate-500 font-medium mb-10">
                <p>
                  আমাদের যাত্রা শুরু হয়েছিল একটি সাধারণ লক্ষ্য নিয়ে—কীভাবে
                  বাংলাদেশের উদ্যোক্তাদের জন্য বিশ্বমানের প্রযুক্তি সহজলভ্য করা
                  যায়। আমরা বিশ্বাস করি, একটি ভালো আইডিয়া সঠিক প্রযুক্তি পেলে
                  অসাধ্য সাধন করতে পারে।
                </p>
                <p>
                  গত ৩ বছরে আমরা ৫০০+ প্রজেক্ট সফলভাবে সম্পন্ন করেছি। আমাদের
                  টিমে কাজ করে একঝাঁক তরুণ ও মেধাবী ডিজাইনার ও ডেভেলপার, যারা
                  প্রতিটি পিক্সেল এবং কোডের পেছনে প্রাণ ঢেলে দেয়।
                </p>
              </div>
            </div>
            <div class="grid sm:grid-cols-3 gap-8">
              {
                stats.map((s) => (
                  <div
                    class="p-8 rounded-[2rem] bg-slate-50 border border-transparent transition-all group"
                    style="opacity: 1; transform: none; background-color: rgb(248, 250, 252); box-shadow: rgba(0, 0, 0, 0) 0px 0px 0px 0px;"
                  >
                    <h4 class="text-lg font-bold text-slate-900 mb-3">
                      {s.label}
                    </h4>
                    <p class="text-4xl text-red-600 font-bold leading-none">
                      {s.value}
                    </p>
                  </div>
                ))
              }
            </div>
          </div>
        </div>
      </div>
    </section>

    {/* Values Grid */}
    <section class="py-32 bg-white">
      <div class="max-w-7xl mx-auto px-6">
        <div class="text-center mb-24">
          <h2
            class="text-red-600 font-bold uppercase tracking-widest text-xs mb-6"
          >
            আমাদের আদর্শ
          </h2>
          <h3
            class="text-4xl md:text-6xl font-display font-bold text-slate-900"
          >
            যেসব কারণে আমরা <span class="text-red-600 italic">ব্যতিক্রম।</span>
          </h3>
        </div>
        <div class="grid md:grid-cols-3 gap-12">
          {
            values.map((v) => (
              <div class="p-12 rounded-[3rem] bg-slate-50 border border-slate-100 hover:shadow-2xl hover:shadow-red-600/5 transition-all group">
                <div class="mb-8 w-16 h-16 rounded-2xl bg-white flex items-center justify-center shadow-sm group-hover:scale-110 transition-transform text-red-600">
                  <v.icon size={32} />
                </div>
                <h4 class="text-2xl font-bold mb-4 text-slate-900">
                  {v.title}
                </h4>
                <p class="text-slate-500 leading-relaxed font-medium">
                  {v.desc}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    {/* Team Section */}
    <section
      class="py-32 bg-slate-900 text-white md:rounded-[4rem] md:mx-6 overflow-hidden"
    >
      <div class="max-w-7xl mx-auto px-10">
        <div
          class="flex flex-col md:flex-row justify-between items-start md:items-end mb-16 md:mb-24 gap-10"
        >
          <div class="max-w-2xl">
            <h2
              class="text-red-600 font-bold uppercase tracking-[0.5em] text-xs mb-6"
            >
              টিম মেম্বারস
            </h2>
            <h3
              class="text-5xl md:text-7xl font-display font-bold leading-tight"
            >
              মাস্টারমাইন্ডদের <br />
              সাথে <span class="text-red-600">পরিচয়।</span>
            </h3>
          </div>
          <p class="text-white/50 text-xl font-medium max-w-sm mb-4">
            আমাদের সার্থকতা আমাদের মেধাবী টিম মেম্বারদের সৃজনশীলতার ফসল।
          </p>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-10">
          {
            team.map((member) => (
              <div class="group">
                <div class="aspect-square rounded-[2.5rem] overflow-hidden mb-8 relative grayscale group-hover:grayscale-0 transition-all duration-700">
                  <img
                    src={member.image}
                    alt={member.name}
                    class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
                  />
                  <div class="absolute inset-0 bg-gradient-to-t from-slate-900/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity" />
                </div>
                <h4 class="text-2xl font-bold mb-2">{member.name}</h4>
                <p class="text-red-500 font-bold text-sm uppercase tracking-widest">
                  {member.role}
                </p>
              </div>
            ))
          }
        </div>
      </div>
    </section>

    {/* CTA */}
    <section class="py-32 bg-white text-center">
      <div class="max-w-3xl mx-auto px-6">
        <h2
          class="text-5xl md:text-7xl font-display font-bold text-slate-900 mb-12"
        >
          আপনি কি আমাদের <br /> সাথে <span class="text-red-600 italic"
            >যুক্ত হতে</span
          > চান?
        </h2>
        <a
          href="/#contact"
          class="inline-flex items-center gap-4 bg-red-600 text-white px-12 py-6 rounded-3xl text-xl font-bold shadow-2xl shadow-red-600/20 hover:bg-slate-900 transition-all"
        >
          চলুন আলোচনা শুরু করি <ArrowRight size={24} />
        </a>
      </div>
    </section>
  </div>
</Layout>
